<a href="/download/<%= name %>" title="capa do jogo <%= name.replace(/-/g, ' ') %>" >
  <div class="md:w-52 md:h-72 w-40 h-60  bg-black m-auto rounded-md overflow-hidden hover:scale-105 duration-300 flex-none relative  ">
    <img src="/cover/<%= img %>"  onerror="imageError(this)" alt="" class=" h-full w-full object-cover obg">
    
    <div class="absolute bottom-2 right-2 flex space-x-2">
      <!-- DOWNLOADS -->
      <% if (typeof downloads !== 'undefined' && downloads > 0 ) { %>
        <div class=" bg-gray-900 px-4 rounded-full py-1   text-white z-40 flex items-center space-x-3">
          <span >
            <img src="/icons/icons8-baixar-52.png"  class="w-4" alt="">
          </span>
          <p><%= downloads %></p>
        </div>
        <% } %>
        
      <!-- VISUALIZAÇÕES -->
      <% if (typeof views !== 'undefined' && views > 0 ) { %>
        <div class=" bg-gray-900 px-4 rounded-full py-1   text-white z-40 flex items-center space-x-3">
          <span >
            <img src="/icons/icons8-visível-90.png"  class="w-4" alt="">
          </span>
          <p><%= views %></p>
        </div>
        <% } %>
          
    </div>  
  </div>
</a>

<script>
  function imageError(img) {
    img.src = '/default-img-cover.webp';
    img.alt = 'Imagem Padrão';
  }
</script>
